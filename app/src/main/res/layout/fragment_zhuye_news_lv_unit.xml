<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/fragment_zhuye_news_lv_unit_ItemLinear"
        >

        <ImageView
            android:id="@+id/fragment_zhuye_news_lv_unit_IV"
            android:layout_width="100sp"
            android:layout_height="100sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            >

            <TextView android:id="@+id/fragment_zhuye_news_lv_unit_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                />

            <TextView android:id="@+id/fragment_zhuye_news_lv_unit_Source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>